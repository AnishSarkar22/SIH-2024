# Stage 1: Build React frontend
FROM node:22.8.0 AS frontend-builder

WORKDIR /app

# Copy package.json and package-lock.json (if available)
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy the rest of the frontend files
COPY . .

# Build the React app (commented out as per your requirement)
# RUN npm run build

# Expose port
EXPOSE 3000